{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "lib": ["ES6", "DOM"],
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist/js",
        "rootDirs": ["src/index.ts", "dist/js"],
        "resolveJsonModule": true,
        // "esModuleInterop": true
    },
    "include": ["src/*.ts"]
}